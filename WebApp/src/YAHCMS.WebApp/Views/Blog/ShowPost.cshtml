@model PostViewModel

<div class="card">

  <div class="card-header">
  <div class="row">
    <div class="col-sm">
      <h5 class="float-left">@Model.Title</h5>
    </div>
    @if((string)ViewData["account_type"] == "creator")
    {
        <div class="col-sm">
          <a class="btn btn-primary float-right" asp-controller="Blog" asp-action="EditPost" asp-route-id="@Model.ID" asp-route-blogid="@Model.BlogID"><i class="fas fa-edit col-sm" style="color:white"></i></a>
          <a class="btn btn-danger float-right" asp-controller="Blog" asp-action="DeletePost" asp-route-id="@Model.ID" asp-route-blogid="@Model.BlogID" style="margin:0 10px 0 10px"><i class="fas fa-trash-alt col-sm" style="color:white"></i></a>
        </div>
    }
    
  </div>
  </div>
  
  <div class="card-body">
    <p class="card-text">@Model.Content.Substring(0, 128)...</p>
    <a asp-controller="Blog" asp-action="ViewPost" asp-route-id="@Model.ID" asp-route-blogid="@Model.BlogID" class="btn btn-primary">Read</a>
  </div>
  <div class="card-footer text-muted text-center">
    <div class="row">
        <div class="col-sm">Comments: 0 </div>
        <div class="col-sm">Posted: @Model.Updated.ToShortDateString()</div>
    </div>
  </div>
</div>

<script>
console.log('@ViewData["account_type"]');
</script>